{
	"compilerOptions": {
		"module": "commonjs",
		"outDir": "dist",
		"sourceMap": true,
		"target": "es6",
		"declaration": true,
		"jsx": "react",
		"moduleResolution": "node",
		"experimentalDecorators": true,
		"emitDecoratorMetadata": true,
		"pretty": true,
		"noImplicitAny": true,
		"strictNullChecks": true,
		"noImplicitThis": true,
		"noUnusedParameters": true,
		"noUnusedLocals": true,
		"skipLibCheck": true,
		"typeRoots": [
			"node_modules/@types/"
		],
	},
	"include": [
		"src"
	]
}